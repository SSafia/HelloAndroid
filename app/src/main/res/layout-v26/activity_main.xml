<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/whiteBack"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/white" />

    <ImageView
        android:id="@+id/udacityLogo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:paddingTop="25dp"
        android:src="@drawable/udacitylogo" />

    <ImageView
        android:id="@+id/iconLocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/udacityLogo"
        android:layout_toStartOf="@id/info1"
        android:src="@drawable/iconlocation" />

    <ImageView
        android:id="@+id/iconPhone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/iconLocation"
        android:layout_toStartOf="@id/info1"
        android:src="@drawable/iconphone" />

    <ImageView
        android:id="@+id/iconSite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/iconPhone"
        android:layout_below="@+id/iconPhone"
        android:src="@drawable/iconsite" />

    <TextView
        android:id="@+id/info1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/udacityLogo"
        android:layout_centerHorizontal="true"
        android:fontFamily="serif-monospace"
        android:text="@string/info1"
        android:textColor="@android:color/darker_gray"
        android:textSize="12sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/info2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/info1"
        android:layout_centerHorizontal="true"
        android:fontFamily="serif-monospace"
        android:text="@string/info2"
        android:textColor="@android:color/darker_gray"
        android:textSize="12sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/info3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/info2"
        android:layout_centerHorizontal="true"
        android:fontFamily="sans-serif-condensed"
        android:paddingTop="10dp"
        android:text="@string/info3"
        android:textColor="@android:color/darker_gray"
        android:textSize="12sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/info4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/info3"
        android:layout_centerHorizontal="true"
        android:fontFamily="sans-serif"
        android:paddingTop="12dp"
        android:text="@string/info4"
        android:textColor="@android:color/darker_gray"
        android:textSize="12sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/udacityLondon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/info4"
        android:paddingTop="20dp"
        android:src="@drawable/udacitylondon" />

    <ImageView
        android:id="@+id/udacityLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/udacityLondon"
        android:paddingTop="45dp"
        android:src="@drawable/udacitylocations" />

    <TextView
        android:id="@+id/textLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/udacityGermany"
        android:layout_toEndOf="@id/udacityLondon"
        android:paddingBottom="20dp"
        android:text="@string/world"
        android:textSize="14sp" />

    <ImageView
        android:id="@+id/udacityGermany"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/udacityLondon"
        android:layout_toEndOf="@id/udacityLondon"
        android:src="@drawable/udacitygermany" />


    <TextView
        android:id="@+id/Goal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/udacityLondon"
        android:layout_marginEnd="180dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="25dp"
        android:fontFamily="monospace"
        android:text="@string/goal"
        android:textColor="@android:color/black"
        android:textSize="12sp"
        android:textStyle="italic" />


</RelativeLayout>